{
  "compilerOptions": {
    // Turn off absolute pathing
    "lib": [
      "ES2020"
    ],
    "allowJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}